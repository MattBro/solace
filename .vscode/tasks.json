{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Start Frontend",
      "type": "npm",
      "script": "dev:frontend",
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "dedicated",
        "showReuseMessage": true,
        "clear": false
      },
      "problemMatcher": ["$tsc-watch"]
    },
    {
      "label": "Start Backend",
      "type": "npm", 
      "script": "dev:backend",
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always", 
        "focus": false,
        "panel": "dedicated",
        "showReuseMessage": true,
        "clear": false
      },
      "problemMatcher": ["$tsc-watch"]
    },
    {
      "label": "Start Both Services",
      "dependsOrder": "parallel",
      "dependsOn": ["Start Frontend", "Start Backend"],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "Debug Frontend",
      "type": "npm",
      "script": "dev:frontend",
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "dedicated",
        "showReuseMessage": true,
        "clear": false
      },
      "options": {
        "env": {
          "NODE_OPTIONS": "--inspect"
        }
      },
      "problemMatcher": ["$tsc-watch"]
    },
    {
      "label": "Debug Backend",
      "type": "npm",
      "script": "start:debug",
      "options": {
        "cwd": "${workspaceFolder}/backend"
      },
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "dedicated",
        "showReuseMessage": true,
        "clear": false
      },
      "problemMatcher": ["$tsc-watch"]
    },
    {
      "label": "Debug Both Services",
      "dependsOrder": "parallel",
      "dependsOn": ["Debug Frontend", "Debug Backend"],
      "group": {
        "kind": "build"
      }
    }
  ]
}